<!DOCTYPE html>
<html>
<head>
  <title>KKRShipping</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<!-- allows flash messaging -->
	<%= flash[:notice] if flash[:notice] %>
	<%= flash[:alert] if flash[:alert] %>
		<% if @currentSalesman %>
		<div class="navmenu_l">
			<a href="/port_managers" id="menu_l">Port Managers</a>
			<a href="/salesmen" id="menu_l">Salesmen</a>
			<a href="/boats" id="menu_l">Vessels</a>
			<a href="/work_orders" id="menu_l">Work Orders</a>
			<a href="/work_orders/new" id="menu_l">New Work Order</a>
			<a href="/containers" id="menu_l">Containers</a>
		</div>
		<% end %>
		<% if @currentPortManager %>
		<div class="navmenu_l">
			<a href="/port_managers" id="menu_l">Port Managers</a>
			<a href="/salesmen" id="menu_l">Salesmen</a>
			<a href="/boats" id="menu_l">Vessels</a>
			<a href="/boats/new" id="menu_l">Construct A Ship</a>
			<a href="/work_orders" id="menu_l">Work Orders</a>
			<a href="/containers" id="menu_l">Containers</a>
		</div>
		<% end %>

		<div class="navmenu_r">
		<% if @currentPortManager || @currentSalesman %>
			<%= link_to("Log Out", '/logout') %>
		<% else %>
			<%= link_to("Log In", '/login') %>
<!-- 			<a href="/login" id="menu_l">Log In</a>
			<a href="/logout" id="menu_l">Log Out</a> -->
		<% end %>
		</div>

<%= yield %>

</body>
</html>
